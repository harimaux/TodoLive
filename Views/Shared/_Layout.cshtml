@using System.IO;
@using Microsoft.AspNetCore.Mvc;
@using System.Diagnostics;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TodoLive</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TodoLive.styles.css" asp-append-version="true" />



    @*GOOGLE ICONS*@
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,100,0,0" />

    @*GOOLE FONTS*@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap" rel="stylesheet">

    @*FONT AWESOME*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />


</head>
<body>

    <div class="mainBackground"></div>

    <div class="customNavMobileMenuBtn">
        <div></div>
        <div></div>
        <div></div>
    </div>

    <header>

        <nav class="customNav">

            <div class="customNavLogoLink">
                <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Images/Logos/logoHarimauxShadow.png" />TodoLive Ai</a>
            </div>

            <div class="customNavLinksAndAccount">
                <ul class="">
                    <li class="">
                        <a class="" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="">
                        <a class="" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="">
                        <a class="" asp-area="" asp-controller="Todos" asp-action="Index">Todos</a>
                    </li>
                </ul>
                <div>
                    <partial name="_LoginPartial" />
                </div>
            </div>

        </nav>
    </header>

    @RenderBody()


    <footer>
        @await Component.InvokeAsync("Footer")
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
